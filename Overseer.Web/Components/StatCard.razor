@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string Trend { get; set; } = "";
    [Parameter] public bool IsPositive { get; set; }
    [Parameter] public string Icon { get; set; } = "fas fa-chart-line";
}

<div class="bg-light-surface dark:bg-dark-surface rounded-lg shadow-md p-4 flex flex-col transform hover:scale-105 transition-transform duration-300 ease-in-out">
    <div class="flex justify-between items-center mb-2">
        <span class="text-sm text-gray-600 dark:text-gray-300 font-semibold">@Title</span>
        <i class="@Icon text-xl text-gray-600 dark:text-gray-300"></i>
    </div>
    <div class="flex items-end justify-between mt-2">
        <div class="flex flex-col items-start">
            <span class="text-xs text-gray-500 dark:text-gray-400 mb-1">Total</span>
            <span class="text-3xl font-bold text-gray-800 dark:text-gray-200">@Value</span>
        </div>
        
        <div class="flex flex-col items-end">
            <span class="text-xs text-gray-500 dark:text-gray-400 mb-1">Today</span>
            <div class="flex items-center">
                <i class="fas @(IsPositive ? "fa-rocket text-green-500" : "fa-parachute-box text-red-500") mr-2"></i>
                <span class="@(IsPositive ? "text-green-500" : "text-red-500") font-bold">@Trend</span>
            </div>
        </div>
    </div>
</div>